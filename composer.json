{
    "name": "creativestyle/magento-patches",
    "description": "patches for magento core",
    "require": {
        "cweagans/composer-patches": "~1.0"
    },
    "extra": {
        "patches": {
            "magento/framework": {
                "Fix customer grid EAV indexing":
                    "vendor/creativestyle/magento-patches/essential/customer-grid-indexing-fix.patch"
            },
            "amasty/module-advanced-permissions": {
                "Fix module loading order":
                    "vendor/creativestyle/magento-patches/essential/amasty-advanced-permission-load-order.patch"
            },
            "magento/magento2-base": {
                "Make it possible to close fullscreen product gallery on iOS":
                    "vendor/creativestyle/magento-patches/essential/ios-fullscreen-gallery-close-fix.patch"
            }
        }
    }
}
